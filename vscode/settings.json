{
  // General
  "editor.matchBrackets": "always",
  "editor.occurrencesHighlight": "off",
  "editor.overviewRulerBorder": true,
  "editor.tabCompletion": "on",
  "editor.lineHeight": 23,
  "editor.tabSize": 2,
  "editor.snippetSuggestions": "top",
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "smooth",
  "editor.folding": true,
  "editor.wordWrap": "on",
  "editor.lineNumbers": "on",
  "editor.cursorStyle": "line",
  "editor.formatOnPaste": false,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[terraform]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "guides.normal.width": 1,
  "explorer.openEditors.visible": 1,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // Fonts
  "editor.fontFamily": "Cascadia Code, Operator Mono, Dank Mono, Fira Code iScript, Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "window.restoreFullscreen": true,
  "window.openFoldersInNewWindow": "off",
  //Files
  "files.defaultLanguage": "javascript",
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.exclude": {
    ".idea": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "vendor": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  // workbench
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.showIcons": false,
  "workbench.panel.defaultLocation": "right",
  "workbench.fontAliasing": "antialiased",
  // terminal
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontSize": 14,
  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "html": "html",
    "javascript": "javascriptreact",
    "typescriptreact": "typescriptreact"
  },
  "tailwindCSS.emmetCompletions": true,
  // Zen
  "zenMode.fullScreen": false,
  "zenMode.restore": true,
  "zenMode.centerLayout": false,
  "extensions.autoUpdate": true,
  // plugins
  "typescript.check.npmIsInstalled": false,
  "search.smartCase": true,
  "search.exclude": {
    "**/.idea": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/docs": true,
    "**/node_modules": true,
    "**/python": true
  },
  "todohighlight.isEnable": true,
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/dist/**",
    "**/build/**",
    "**/.vscode/**",
    "**/.github/**",
    "**/_output/**",
    "**/*.min.*",
    "**/*.map",
    "**/.next/**",
    "**/docs/**",
    "**/apidocs/**",
    "**/jsdocs/**"
  ],
  "terminal.integrated.lineHeight": 1.4,
  // Disable built in linters since we have eslint and style lint integrated with prettier
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "breadcrumbs.enabled": true,
  "editor.suggestSelection": "first",
  "liveServer.settings.donotShowInfoMsg": true,
  "terminal.integrated.profiles.osx": {
    "zsh": { "path": "zsh", "args": ["-l"] }
  },
  "prettier.printWidth": 120,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.colorCustomizations": {
    "[Winter is Coming (Dark Blue)]": {
      "editor.background": "#131418",
      "activityBar.background": "#131418",
      "sideBar.background": "#131418",
      "terminal.background": "#131418"
    }
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.languageServer": "Default",
  "tailwindCSS.includeLanguages": {
    "plaintext": "ts"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
  },
  "security.workspace.trust.untrustedFiles": "open",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "editor.accessibilitySupport": "off",
  "[python]": {
    "editor.formatOnType": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": [
        "-d",
        "Ubuntu"
      ]
    }
  },
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "window.zoomLevel": -1,
}
